# Environment Variables for Monadic DNA Batcher
# Copy this file to .env.local and fill in your values

# =============================================================================
# AUTHENTICATION - Dynamic.xyz (for wallet connection)
# =============================================================================
# Get your environment ID from: https://app.dynamic.xyz/
NEXT_PUBLIC_DYNAMIC_ENVIRONMENT_ID=your_dynamic_environment_id_here

# =============================================================================
# NILLION API - Required for privacy-preserving data storage
# =============================================================================
# Get your API key from: https://nillion.com
# Used for storing sensitive data: email, shipping info, metadata, DNA results
NILLION_API_KEY=your_nillion_api_key_here

# Collection ID for your Batcher instance
NEXT_PUBLIC_NILLION_COLLECTION_ID=dna-batcher

# =============================================================================
# BLOCKCHAIN PROVIDER - Alchemy (Optional but recommended)
# =============================================================================
# Get your API key from: https://dashboard.alchemy.com/
# Alchemy provides reliable RPC endpoints with enhanced features
# Optional: Only required for ENS name resolution and production deployments
# NOTE: Keep this server-side only (no NEXT_PUBLIC_ prefix) to protect your API key
ALCHEMY_API_KEY=your_alchemy_api_key_here

# =============================================================================
# SMART CONTRACT DEPLOYMENT
# =============================================================================
# Deployed BatchStateMachine contract address (after deployment)
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# RPC URL for blockchain connection (uses Alchemy if API key is set)
# Format: https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# For mainnet: https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# For Arbitrum: https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# For Base: https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
NEXT_PUBLIC_RPC_URL=http://localhost:8545

# Chain ID for the deployed contract
# Ethereum Mainnet: 1, Sepolia: 11155111, Arbitrum: 42161, Base: 8453
NEXT_PUBLIC_CHAIN_ID=421614

# =============================================================================
# STRIPE PAYMENTS - Credit/Debit Card Payments
# =============================================================================
# Get your API keys from: https://dashboard.stripe.com/apikeys
# Use test keys for development (sk_test_..., pk_test_...)
# Use live keys for production (sk_live_..., pk_live_...)

# Server-side secret key (NEVER expose in client code)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Client-side publishable key (safe to expose in browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =============================================================================
# PRICING CONFIGURATION
# =============================================================================
# Full price for DNA testing (in USD)
FULL_PRICE=100.00

# Deposit percentage (10% of full price)
DEPOSIT_PERCENTAGE=10

# Balance percentage (90% of full price)
BALANCE_PERCENTAGE=90

# =============================================================================
# BATCH CONFIGURATION
# =============================================================================
# Maximum batch size (default: 24)
MAX_BATCH_SIZE=24

# Payment window in days (default: 7)
PAYMENT_WINDOW_DAYS=7

# Claim window in days (default: 60)
CLAIM_WINDOW_DAYS=60

# Patience timer in months (default: 6)
PATIENCE_TIMER_MONTHS=6

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Base URL for the application (used for redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable testnet mode for development
NEXT_PUBLIC_ENABLE_TESTNET=true

# =============================================================================
# ADMIN SETTINGS
# =============================================================================
# Admin wallet address (for contract owner functions)
ADMIN_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# DATABASE (Optional - for caching and analytics)
# =============================================================================
# PostgreSQL connection string (optional, for storing batch metadata)
# DATABASE_URL=postgresql://user:password@localhost:5432/batcher

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Google Analytics tracking ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
